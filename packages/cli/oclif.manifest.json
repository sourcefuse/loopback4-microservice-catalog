{
  "version": "2.0.2",
  "commands": {
    "extension": {
      "id": "extension",
      "description": "add an extension",
      "pluginName": "@sourceloop/cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "description": "show manual pages",
          "allowNo": false
        }
      },
      "args": [
        {
          "name": "name",
          "description": "Name of the extension",
          "required": false
        }
      ]
    },
    "microservice": {
      "id": "microservice",
      "description": "add a microservice",
      "pluginName": "@sourceloop/cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "description": "show manual pages",
          "allowNo": false
        },
        "facade": {
          "name": "facade",
          "type": "boolean",
          "description": "Create as facade",
          "allowNo": true
        },
        "baseOnService": {
          "name": "baseOnService",
          "type": "boolean",
          "description": "Base on sourceloop microservice or not",
          "allowNo": true
        },
        "baseService": {
          "name": "baseService",
          "type": "option",
          "char": "s",
          "description": "Base sourceloop microservice",
          "required": false,
          "helpValue": "(authentication-service|audit-service|chat-service|notification-service|bpmn-service|feature-toggle-service|in-mail-service|payment-service|scheduler-service|search-service|video-conferencing-service)",
          "options": [
            "authentication-service",
            "audit-service",
            "chat-service",
            "notification-service",
            "bpmn-service",
            "feature-toggle-service",
            "in-mail-service",
            "payment-service",
            "scheduler-service",
            "search-service",
            "video-conferencing-service"
          ]
        },
        "uniquePrefix": {
          "name": "uniquePrefix",
          "type": "option",
          "char": "p",
          "description": "Unique prefix to be used for docker images",
          "required": false
        },
        "datasourceName": {
          "name": "datasourceName",
          "type": "option",
          "description": "Name of the datasource to generate",
          "required": false
        },
        "datasourceType": {
          "name": "datasourceType",
          "type": "option",
          "description": "Type of the datasource",
          "required": false,
          "helpValue": "(postgres|mysql)",
          "options": ["postgres", "mysql"]
        },
        "includeMigrations": {
          "name": "includeMigrations",
          "type": "boolean",
          "description": "Include base microservice migrations",
          "allowNo": false
        },
        "customMigrations": {
          "name": "customMigrations",
          "type": "boolean",
          "description": "Setup custom migration for this microservice",
          "allowNo": false
        }
      },
      "args": [
        {
          "name": "name",
          "description": "Name of the microservice",
          "required": false
        }
      ]
    },
    "scaffold": {
      "id": "scaffold",
      "description": "create a project scaffold",
      "pluginName": "@sourceloop/cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "description": "show manual pages",
          "allowNo": false
        },
        "issuePrefix": {
          "name": "issuePrefix",
          "type": "option",
          "description": "Prefix to be used for issues(e.g. GH-)"
        },
        "cwd": {
          "name": "cwd",
          "type": "option",
          "description": "Directory where project will be scaffolded, instead of the project name"
        }
      },
      "args": [
        {
          "name": "name",
          "description": "name of the project",
          "required": false
        }
      ]
    }
  }
}
