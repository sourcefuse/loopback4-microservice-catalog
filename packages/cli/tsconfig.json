{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": false,
    "typeRoots": [
      "./../../node_modules/@types",
      "./node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
