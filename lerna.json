{
  "packages": ["packages/*", "services/*", "facades/*", "sandbox/*"],
  "command": {
    "bootstrap": {
      "concurrency": 4,
      "forceLocal": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore: publish release",
      "allowBranch": "master"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore: publish release",
      "allowBranch": "master",
      "noPrivate": true
    },
    "run": {
      "concurrency": 1,
      "ignore": [
        "@sourceloop/auth-multitenant-example",
        "@sourceloop/sandbox-testing"
      ]
    },
    "clean": {
      "loglevel": "silent",
      "concurrency": 8,
      "yes": true
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
  "version": "independent"
}
